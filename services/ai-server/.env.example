# NextShop AI Server Configuration

# Server Configuration
HOST=localhost
PORT=8000
ENVIRONMENT=development
MAX_WORKERS=1

# Model Configuration
MODELS_DIRECTORY=./models
AUTO_DETECT_MODELS=true
MODEL_CACHE_SIZE=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true

# API Configuration
API_TITLE=NextShop AI Server
API_DESCRIPTION=Production-grade AI inference server for NextShop e-commerce platform
API_VERSION=2.0.0

# Security Configuration (Production)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Performance Configuration
REQUEST_TIMEOUT=30
MAX_REQUEST_SIZE=10485760
ENABLE_CACHING=true

# Hardware Configuration (Auto-detected if not set)
# DEVICE=auto
# USE_GPU=auto
# MAX_MEMORY_GB=8
